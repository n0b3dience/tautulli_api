{
  "$id": "notify#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema for defining notify() parameters",
  "type": "object",
  "properties": {

    "apikey": {
      "type": "string",
      "description": "The Tautulli API key"
    },

    "cmd": {
      "type": "string",
      "description": "The API command"
    },

    "out_type": {
      "type": "string",
      "enum": ["json", "xml"],
      "description": "The type of output to return (\"json\" or \"xml\")"
    },

    "callback": {
      "type": "string"
    },

    "debug": {
      "anyOf": [
        {"type": "string", "pattern": "^0*?[01]$"},
        {"type": "integer", "minimum": 0, "maximum": 1}
      ],
      "description": "Enable/disable debugging"
    },

    "notifier_id": {
      "anyOf": [
        {"type": "integer", "minimum": 0},
        {"type": "string", "pattern": "^(\\d+)$"}
      ],
      "description": "The notifier config to retrieve"
    },

    "subject": {
      "type": "string",
      "description": "The subject of the message"
    },

    "body": {
      "type": "string",
      "description": "The body of the message"
    },

    "script_args": {
      "type": "string",
      "description": "The arguments for script notifications"
    }
    
  },
  "required": ["apikey", "cmd", "notifier_id", "subject", "body"]
}