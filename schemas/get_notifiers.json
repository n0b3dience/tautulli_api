{
  "$id": "get_notifiers#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema for defining get_notifiers() parameters",
  "type": "object",
  "properties": {

    "apikey": {
      "type": "string",
      "description": "The Tautulli API key"
    },

    "cmd": {
      "type": "string",
      "description": "The API command"
    },

    "out_type": {
      "type": "string",
      "enum": ["json", "xml"],
      "description": "The type of output to return (\"json\" or \"xml\")"
    },

    "callback": {
      "type": "string"
    },

    "debug": {
      "anyOf": [
        {"type": "string", "pattern": "^0*?[01]$"},
        {"type": "integer", "minimum": 0, "maximum": 1}
      ],
      "description": "Enable/disable debugging"
    },
    
    "notify_action": {
      "type": "string"
    }
    
  },
  "required": ["apikey", "cmd"]
}