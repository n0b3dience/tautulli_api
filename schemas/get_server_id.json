{
  "$id": "get_server_id#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema for defining get_server_id() parameters",
  "type": "object",
  "properties": {

    "apikey": {
      "type": "string",
      "description": "The Tautulli API key"
    },

    "cmd": {
      "type": "string",
      "description": "The API command"
    },

    "out_type": {
      "type": "string",
      "enum": ["json", "xml"],
      "description": "The type of output to return (\"json\" or \"xml\")"
    },

    "callback": {
      "type": "string"
    },

    "debug": {
      "anyOf": [
        {"type": "string", "pattern": "^0*?[01]$"},
        {"type": "integer", "minimum": 0, "maximum": 1}
      ],
      "description": "Enable/disable debugging"
    },
    
    "hostname": {
      "type": "string",
      "description": "The IP address or hostname of the Plex server"
    },

    "port": {
      "anyOf": [
        {"type": "integer", "minimum": 0},
        {"type": "string", "pattern": "^(\\d+)$"}
      ],
      "description": "The port of the Plex server"
    },

    "ssl": {
      "anyOf": [
        {"type": "string", "pattern": "^0*?[01]$"},
        {"type": "integer", "minimum": 0, "maximum": 1}
      ],
      "description": "Toggle SSL usage (0 or 1)"
    },

    "remote": {
      "anyOf": [
        {"type": "string", "pattern": "^0*?[01]$"},
        {"type": "integer", "minimum": 0, "maximum": 1}
      ],
      "description": "Toggle remote usage (0 or 1)"
    }
    
  },
  "required": ["apikey", "cmd", "hostname", "port"]
}